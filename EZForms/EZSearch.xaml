<?xml version="1.0" encoding="UTF-8" ?>
<ez:EZContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:ez="clr-namespace:EZAppMaker.Components;assembly=EZAppMaker"
                         xmlns:resource="clr-namespace:EZAppMaker.Resources;assembly=EZAppMaker"
                         xmlns:view="clr-namespace:EZForms"
                         x:DataType="view:EZSearch"
                         x:Class="EZForms.EZSearch"
                         ItemId="EZSearch"
                         Title="Search">

    <ContentView.Content>

        <Border x:Name="SearchFrame"
                Padding="10"
                BackgroundColor="{resource:ColorResource ezsearch_background}"
                Stroke="{resource:BrushResource ezsearch_border}">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>

            <VerticalStackLayout x:Name="EZSearchStack" StyleClass="EZVerticalStackStyle"/>

        </Border>

    </ContentView.Content>

</ez:EZContentView>

