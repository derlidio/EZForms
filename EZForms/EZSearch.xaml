<?xml version="1.0" encoding="UTF-8" ?>
<ez:EZContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:ez="clr-namespace:EZAppMaker.Components;assembly=EZAppMaker"
                         xmlns:resource="clr-namespace:EZAppMaker.Resources;assembly=EZAppMaker"
                         xmlns:view="clr-namespace:EZForms"
                         x:DataType="view:EZSearch"
                         x:Class="EZForms.EZSearch"
                         ItemId="EZSearch"
                         Title="Search">

    <ContentView.Content>
        <Frame x:Name="SearchFrame"
               StyleClass="EZFrameStyle"
               Padding="10"
               CornerRadius="20"
               HasShadow="False"
               Background="{resource:BrushResource ezsearch_background}"
               BorderColor="{resource:ColorResource ezsearch_border}">

               <StackLayout x:Name="EZSearchStack" StyleClass="EZStackStyle"/>

        </Frame>
    </ContentView.Content>

</ez:EZContentView>

